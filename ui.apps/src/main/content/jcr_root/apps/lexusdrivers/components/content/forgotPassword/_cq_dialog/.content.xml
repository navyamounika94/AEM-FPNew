<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:lastReplicated="{Date}2019-10-29T03:18:25.676-06:00"
    cq:lastReplicatedBy="admin"
    cq:lastReplicationAction="Activate"
    jcr:mixinTypes="[cq:ReplicationStatus]"
    jcr:primaryType="nt:unstructured"
    jcr:title="Forgot Password &amp; Display Message"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="style-guide.html#compare-rows-services"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Forgot Password"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title              "
                                fieldDescription ="Forgot password page title"
                                name="./title"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./description"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <links jcr:primaryType="nt:unstructured">
                                        <linkDialogConfig
                                            jcr:primaryType="nt:unstructured"
                                            height="{Long}316">
                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                        </linkDialogConfig>
                                    </links>
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <lists
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <keys
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <paraformat
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <misctools
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <fullscreen
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <findreplace
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <edit
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <table
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <spellcheck
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <undo
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <styles jcr:primaryType="cq:WidgetCollection">
                                            <employee
                                                jcr:primaryType="nt:unstructured"
                                                cssName="employee"
                                                text="Employee Style"/>
                                            <partner
                                                jcr:primaryType="nt:unstructured"
                                                cssName="partner"
                                                text="Partner Style"/>
                                            <customer
                                                jcr:primaryType="nt:unstructured"
                                                cssName="customer"
                                                text="Customer Style"/>
                                        </styles>
                                    </styles>
                                    <color-picker
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <highlight-color-picker
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,edit#cut,edit#copy,edit#paste-default,edit#paste-plaintext,edit#paste-wordhtml,links#modifylink,links#unlink,findreplace#find,findreplace#replace,undo#undo,undo#redo,justify#justifyleft,justify#justifyright,justify#justifycenter,lists#unordered,lists#ordered,lists#outdent,table#createoredit,table#removetable,lists#indent,misctools#sourceedit,misctools#specialchars,#paraformat,#styles,fullscreen#finish,fontstyles#styles,color-picker#textColorPicker,highlight-color-picker#textHighlightColorPicker]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                                <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                    ref="paraformat"/>
                                            </popovers>
                                        </inline>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,subsuperscript#subscript,subsuperscript#superscript,edit#cut,edit#copy,edit#paste-default,edit#paste-plaintext,edit#paste-wordhtml,links#modifylink,links#unlink,findreplace#find,findreplace#replace,undo#undo,undo#redo,justify#justifyleft,justify#justifyright,justify#justifycenter,lists#unordered,lists#ordered,lists#outdent,table#createoredit,table#removetable,lists#indent,misctools#sourceedit,misctools#specialchars,#paraformat,#styles,fullscreen#finish,fontstyles#styles,color-picker#textColorPicker,highlight-color-picker#textHighlightColorPicker]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                                <paraformat
                                                    jcr:primaryType="nt:unstructured"
                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                    ref="paraformat"/>
                                            </popovers>
                                        </dialogFullScreen>
                                    </cui>
                                </uiSettings>
                            </description>
                               <sendEmailLabel
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="SendEmailLabel "
                                name="./sendEmailLabel"/>
                                 <emailField
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="EmailField     "
                                name="./emailField"/>
                            <emailRequiredMessage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="PrimaryButtonLink    "
                                name="./emailRequiredMessage"
                                required="{Boolean}true"/>
                           
                         
                            <successPage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="SuccessPage    "
                                name="./successPage"/>
                            <needMoreHelp
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldLabel="NeedMoreHelp "
                                                required="{Boolean}true"
                                                fieldDescription ="content to show CONTACT link" 
                                                name="./needMoreHelp"
                                                useFixedInlineToolbar="{Boolean}true">
                                     <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <links jcr:primaryType="nt:unstructured">
                                                        <linkDialogConfig
                                                            jcr:primaryType="nt:unstructured"
                                                            height="{Long}316">
                                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                                        </linkDialogConfig>
                                                    </links>
                                                   
                                                    <subsuperscript
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <edit
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    
                                                    <spellcheck
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <undo
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <styles jcr:primaryType="cq:WidgetCollection">
                                                            <employee
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="employee"
                                                                text="Employee Style"/>
                                                            <partner
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="partner"
                                                                text="Partner Style"/>
                                                            <customer
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="customer"
                                                                text="Customer Style"/>
                                                        </styles>
                                                    </styles>
                                                    <color-picker
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <highlight-color-picker
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                            </rtePlugins>
                                </needMoreHelp>
                            <emailValidations
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="EmailValidations "
                                name="./emailValidations"
                                required="{Boolean}true"
                                fieldDescription ="Add Email regex rule to validate user email"
                                value="^(?=.{1,50}$)(?=.{1,50}$)[a-zA-Z0-9][a-zA-Z0-9_\-\.]*@[a-zA-Z0-9\-\.]+(\.[a-zA-Z]{2,4})+$" />

                            <emailValidationError 
                               jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="EmailValidationError "
                                name="./emailValidationError"
                                required="{Boolean}true"
                                fieldDescription ="Error message to show invalid email" 
                                value ="Please enter valid email address" />
                             
                            <accountactivationError
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldLabel="AccountactivationError"
                                                required="{Boolean}true"
                                                fieldDescription ="Error message to show when account inactive" 
                                                name="./accountactivationError"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <links jcr:primaryType="nt:unstructured">
                                                        <linkDialogConfig
                                                            jcr:primaryType="nt:unstructured"
                                                            height="{Long}316">
                                                            <linkAttributes jcr:primaryType="cq:WidgetCollection"/>
                                                        </linkDialogConfig>
                                                    </links>
                                                   
                                                    <subsuperscript
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <edit
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    
                                                    <spellcheck
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <undo
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <styles jcr:primaryType="cq:WidgetCollection">
                                                            <employee
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="employee"
                                                                text="Employee Style"/>
                                                            <partner
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="partner"
                                                                text="Partner Style"/>
                                                            <customer
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="customer"
                                                                text="Customer Style"/>
                                                        </styles>
                                                    </styles>
                                                    <color-picker
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <highlight-color-picker
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                </rtePlugins>
                                </accountactivationError>
                        </items>
                    </column>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="nt:unstructured"
                jcr:title="Display Message"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                    margin="{Boolean}false"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                        <displaytitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title              "
                                name="./diplaytitle"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./displaydescription"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <displaydescription2
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Description"
                                name="./displaydescription2"
                                useFixedInlineToolbar="{Boolean}true"/>
                            <primaryButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="PrimaryButtonText   "
                                name="./displayprimaryButtonText"/>
                            <primaryButtonLink
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                fieldLabel="PrimaryButtonLink    "
                                name="./displayprimaryButtonLink"
                                required="{Boolean}true"/>
                            
                            <supportContent
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="SupportContent "
                                name="./displaysupportContent"/>
                            
                            <verticalCenterAlign
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                checked="${not empty cqDesign.hideCurrent ? cqDesign.hideCurrent : false}"
                                name="./displayverticalCenterAlign"
                                text="VerticalCenterAlign ?"
                                uncheckedValue="false"
                                value="true"/>
                        </items>
                    </column>
                </items>
            </tab2>
        </items>
    </content>
</jcr:root>
